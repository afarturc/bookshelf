<%= turbo_frame_tag("company_reservations") do %>
    <div class="bg-sky-50 shadow rounded p-6 mb-4 h-fit">
        <h3 class="font-bold mb-5">Company reservations</h3>
        <% @active_company_reservations&.each do |company_reservation| %>
            <div class="bg-white shadow rounded p-4 flex flex-col gap-4 mb-4">
                <%= link_to(book_path(company_reservation.book), "data-turbo-frame": "_top") do %>
                    <h4 class="font-bold hover:underline"><%= company_reservation.book.title %></h4>
                <% end %>
                <div class="flex flex-row w-full gap-2 items-center">
                    <%= image_tag("arrow-down.svg", class: "w-4") %>
                    <p>Reserved by <%= company_reservation.user.full_name %> on <%= company_reservation.created_at.to_date %></p>
                </div>
            </div>
        <% end %>
    </div>
<% end %>