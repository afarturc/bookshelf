<div class="w-2/3 mx-auto">
    <h1 class="font-bold text-5xl pb-8"><%= @book.title %></h1>
    <div class="flex">
        <%= image_tag(@book.cover_url, class: "max-h-96 justify-start mr-8") %>
        <div class="flex flex-col">
            <span class="mb-5 text-sm text-white bg-sky-500 p-2 w-fit rounded-2xl shadow"><%= format_genre(@book.genre) %></span>
            <p><%= @book.description %></p>
            <div class="pt-12">
                <% if @book.reserved? %>
                    <div class="flex gap-2 items-center">
                        <%= image_tag("bookmark.svg", class: "w-5") %>
                        <p>
                            <span class="font-bold"><%= @book.active_reader.full_name %></span> reserved <%= @book.title %> on <%= @book.active_reservation.created_at.to_date %>
                        </p>
                    </div>
                <% elsif !current_user.actively_reading? %>
                    <%= button_to "Reserve book", reserve_book_path(@book), method: :post, class: "w-full rounded-lg py-3 bg-green-600 text-white font-medium cursor-pointer" %>
                <% end %>
            <div>
        </div>
    </div>
</div>
